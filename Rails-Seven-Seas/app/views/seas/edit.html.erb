
<div class="container">
<%= form_tag seas_path do %>
  <label>Name:</label><br>
  <input type="text" id="name" name="sea[name]"><br>

  <label>Bio:</label><br>
  <input type="text" id="bio" name="sea[bio]"><br>

  <label>Image URL:</label><br>
  <input type="text" id="image_url" name="sea[image_url]"><br>

  <label>Temperature:</label><br>
  <input type="text" id="temperature" name="sea[temperature]"><br>

  <label>Favorite Color:</label><br>
  <input type="text" id="favorite_color" name="sea[favorite_color]"><br>

  <label>Scariest Creature:</label><br>
  <input type="text" id="scariest_creature" name="sea[scariest_creature]"><br>

  <label>Mood:</label><br>
  <input type="text" id="mood" name="sea[mood]"><br>

  <label>Has Mermaids</label><br>
  <input type="checkbox" id="has_mermaids" name="has_mermaids">
 
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="submit" value="Submit Post">
<% end %>

  <div class="text-center row" style="margin: 1em">
    <div class="col-sm-1">
      <button class="btn btn-info" style="margin: 0 auto"><a href="/seas/<%=@sea.id%>">Back</a></button>
    </div>
    <div class="col-sm-1">
    <button class="btn btn-info" style="margin: 0 auto"><a class="btn-info" href="/seas">All Seas</a></button>
    </div>
    <div class="col-sm-9">
    </div>
    <div class="col-sm-1">

    <form action="/seas/<%=@sea.id%>" method="POST" style="margin: 0 auto">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <input type="hidden" name="_method" value="DELETE" />
        <input class="btn btn-danger" type="submit" value="Delete"/>
    </form>

    </div>
  </div>
</div>
